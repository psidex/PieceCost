{
    "env": {
      "browser": true,
      "es6": true,
      "webextensions": true
    },
    "extends": [
      "airbnb-base"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "indent": ["error", 4],
      "no-restricted-syntax": "off",
      "no-plusplus": "off"
    }
  }